<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- activity_main.xml -->
    <style name="title_MainActivity">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="bt_MainActivity_apps">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/bt_color</item>
        <item name="android:textColor">@color/bt_tx_color</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:onClick">clickProjects</item>
    </style>

</resources>
